{
  "name": "frolint",
  "description": "git commit hook linter",
  "version": "2.1.2",
  "author": "Yuki Yamada <yamada@wantedly.com>",
  "bin": "index.js",
  "dependencies": {
    "chalk": "^4.1.0",
    "clipanion": "^2.4.2",
    "command-exists": "^1.2.9",
    "cosmiconfig": "^6.0.0",
    "eslint": "^7.5.0",
    "eslint-config-wantedly": "^2.1.2",
    "eslint-config-wantedly-typescript": "^2.1.2",
    "prettier": "^2.0.5",
    "prettier-config-wantedly": "^2.1.2",
    "resolve": "^1.17.0"
  },
  "homepage": "https://github.com/wantedly/frolint",
  "keywords": [
    "eslint",
    "githooks"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/wantedly/frolint/tree/master/packages/frolint",
  "scripts": {
    "postinstall": "test lib/index.js && node index.js install || true",
    "preuninstall": "node index.js uninstall",
    "test": "jest",
    "build": "tsc -b .",
    "build:watch": "tsc -b . --watch"
  },
  "devDependencies": {
    "@types/command-exists": "^1.2.0",
    "@types/cosmiconfig": "^6.0.0",
    "@types/eslint": "^7.2.0",
    "@types/mock-fs": "^4.10.0",
    "@types/prettier": "^2.0.2",
    "@types/resolve": "^1.17.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testEnvironment": "node"
  }
}
