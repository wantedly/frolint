{
  "name": "frolint",
  "private": true,
  "author": "Yuki Yamada <yamada@wantedly.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "jest": "^24.9.0",
    "lerna": "^3.13.0",
    "lerna-changelog": "^0.8.2",
    "mock-fs": "^4.8.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4"
  },
  "workspaces": [
    "packages/*"
  ],
  "frolint": {
    "prettier": {
      "config": "./.prettierrc"
    }
  },
  "scripts": {
    "postinstall": "lerna bootstrap",
    "test": "FORCE_COLOR=1 lerna run --parallel test",
    "test:watch": "FORCE_COLOR=1 lerna exec --parallel -- npm run test -- --watch",
    "test:watch:frolint": "lerna exec \"npm run test -- --watch\" --scope frolint",
    "test:update": "lerna run --parallel test -- -u",
    "lint": "frolint --branch=master",
    "changelog": "yarn lerna-changelog",
    "build": "lerna run build --scope frolint",
    "build:watch": "lerna exec npm run build:watch --scope frolint"
  },
  "changelog": {
    "repo": "wantedly/frolint",
    "labels": {
      "dependencies": "Update dependencies",
      "enhancement": "New feature or improvement",
      "bug": "Bug fix",
      "documentation": "Improve documentation"
    },
    "cacheDir": ".changelog"
  }
}
